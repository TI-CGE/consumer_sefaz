<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Propriedades -->
    <springProfile name="!prod">
        <property name="LOG_PATH" value="./logs"/>
    </springProfile>
    <springProfile name="prod">
        <property name="LOG_PATH" value="/var/log/sefaz-consumer"/>
    </springProfile>

    <!-- Console Appender - Formato simples para usuários -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Técnico - Para desenvolvimento (opcional) -->
    <appender name="CONSOLE_TECHNICAL" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%X{correlationId:-N/A}] %cyan([%X{component:-APP}]) %yellow([%X{operation:-UNKNOWN}]) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Simple Log File - FORMATO SIMPLIFICADO -->
    <appender name="SIMPLE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/simple.log</file>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/simple.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Markdown Log File - LOGS ESTRUTURADOS -->
    <appender name="MARKDOWN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/operations.md</file>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/operations.%d{yyyy-MM-dd}.%i.md.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Application Log File - LOG TÉCNICO COMPLETO -->
    <appender name="APPLICATION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%X{correlationId:-N/A}] [%X{component:-APP}] [%X{operation:-UNKNOWN}] - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Error Log File - LOG DE ERROS -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/errors.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ERROR [%X{correlationId:-N/A}] [%X{component:-APP}] [%X{operation:-UNKNOWN}] - %msg%n%ex</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/errors.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>


    <!-- Logger específico para mensagens de usuário -->
    <logger name="USER_FRIENDLY" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger simplificado -->
    <logger name="SIMPLE" level="INFO" additivity="false">
        <appender-ref ref="SIMPLE_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger para formato markdown -->
    <logger name="MARKDOWN" level="INFO" additivity="false">
        <appender-ref ref="MARKDOWN_FILE"/>
    </logger>

    <!-- Filtros para reduzir ruído de frameworks -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.jboss.logging" level="WARN"/>
    <logger name="jakarta.persistence" level="WARN"/>

    <!-- Manter logs da aplicação em nível INFO -->
    <logger name="br.gov.se.setc" level="INFO"/>

    <!-- Root logger configuration -->
    <springProfile name="dev">
        <root level="WARN">
            <appender-ref ref="APPLICATION_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
            <!-- Descomente a linha abaixo para ver logs técnicos no console -->
            <!-- <appender-ref ref="CONSOLE_TECHNICAL"/> -->
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="APPLICATION_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

    <springProfile name="!dev &amp; !prod">
        <root level="WARN">
            <appender-ref ref="APPLICATION_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
            <!-- Descomente a linha abaixo para ver logs técnicos no console -->
            <!-- <appender-ref ref="CONSOLE_TECHNICAL"/> -->
        </root>
    </springProfile>

</configuration>
